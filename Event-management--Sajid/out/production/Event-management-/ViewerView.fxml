<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml">
    
    <!-- Top Title -->
    <Label fx:id="titleLabel" text="Viewer Dashboard" BorderPane.alignment="CENTER">
        <style>
            -fx-font-size: 30px;
            -fx-text-fill: white;
            -fx-font-weight: bold;
            -fx-padding: 20 0 20 0;
        </style>
    </Label>
    
    <!-- Center Scrollable Events -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" BorderPane.alignment="CENTER">
        <content>
            <VBox fx:id="eventsContainer" alignment="CENTER" spacing="20" style="-fx-padding: 20;" />
        </content>
    </ScrollPane>
    
    <!-- Bottom Back Button -->
    <Button fx:id="backButton" text="â† Back" BorderPane.alignment="CENTER">
        <style>
            -fx-background-color: #2E86DE;
            -fx-text-fill: white;
            -fx-font-size: 16px;
            -fx-font-weight: bold;
            -fx-background-radius: 10;
            -fx-padding: 10 25 10 25;
            -fx-cursor: hand;
        </style>
    </Button>
    
</BorderPane>



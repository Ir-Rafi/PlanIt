<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller"
      alignment="CENTER" spacing="2" styleClass="root-box">

    <!-- Your welcome labels HBoxes -->
    <HBox alignment="CENTER" spacing="2">
        <Label text="Welcome to" styleClass="LeftWelcomeLabel"/>
    </HBox>

    <HBox alignment="CENTER" spacing="2">
        <Label text="PlanIt!" styleClass="RightPlan-it"/>
    </HBox>

    <!-- Blinking text -->
    <Text fx:id="continueText" text="Press any key to continue" styleClass="continue-text"/>
</VBox>

